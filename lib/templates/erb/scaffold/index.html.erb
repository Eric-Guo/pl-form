<h3>The <%= plural_table_name.titleize %> records</h3>

<%%= link_to 'Input <%= human_name %>', new_<%= singular_table_name %>_path, :class => 'btn btn-primary' %>

<hr>

<table class="table table-bordered">
  <thead>
  <colgroup>
    <col class="actions" />
<% attributes.each do |attribute| -%>
    <col />
<% end -%>
  </colgroup>
  <tr>
    <th>Actions</th>
<% attributes.each do |attribute| -%>
    <th><%= attribute.human_name.titleize %></th>
<% end -%>
  </tr>
  </thead>
  <tbody>
<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <td>
    <%%= link_to raw('<i class="icon-list"></i>'), <%= singular_table_name %> -%>
    <%%= link_to raw('<i class="icon-edit"></i>'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>) -%>
    <%%= link_to raw('<i class="icon-remove"></i>'), <%= singular_table_name %>, <%= key_value :confirm, "'Are you sure?'" %>, <%= key_value :method, ":delete" %> -%>
    </td>
<% attributes.each do |attribute| -%>
    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
  </tr>
<%% end %>
  </tbody>
</table>
<%%= will_paginate @<%= plural_table_name %> %>